<div class="container">
  <div class="jumbotron">
    <h1><%= @hospital.name %></h1>
    <hr />
    <small><%= link_to "View Registered Doctors", hospital_registrations_path %></small>
  </div>

<% if current_user.admin %>
  <div class="page-header">
    <h2>Delete this hospital</h2>
  </div>
  <%= link_to "Delete", hospital_path(@hospital), method: :delete,
    data: { confirm: 'Are you sure you want to delete this hospital?' } %>
<% else %>
  <% if !current_user.doctorlists.where(:hospital_id => @hospital.id).exists? %>
    <div class="page-header">
      <h2>Register for this hospital: </h2>
    </div>
    <p>
      <%= link_to "Register", new_doctorlist_path(:hospital_id => @hospital.id) %>
    </p>
  <% else %>
    <p>You are registered to this hospital.</p>
  <% end %>
<% end %>
</div>


<div class="container">
  <div class="page-header">
    <h2>Hospital Address:</h2>
  </div>
  <p>
    <%= @hospital.street_address %>,
    <%= @hospital.city %>,
    <%= @hospital.state %>
    <%= @hospital.zipcode %>
  </p>

  <small>Google Map Will Go Here</small>
</div>
