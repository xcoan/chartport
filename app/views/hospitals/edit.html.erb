<%= form_for :hospital, url: hospital_path(@hospital), method: :patch do |f| %>

<div class="container">
  <div class="jumbotron">
    <h2>Edit Hospital</h2>
    <hr />
    <h3>
      <%= @hospital.name %>
    </h3>
  </div>
</div>

<div class="container">
  <div class="page-header">
    <h3>Street Address:</h3>
  </div>
  <%= f.text_field :street_address, :class => 'textfield' %>
</div>

<div class="container">
  <div class="page-header">
    <h3>City:</h3>
  </div>
  <%= f.text_field :city, :class => 'textfield' %>
</div>

<div class="container">
  <div class="page-header">
    <h3>State:</h3>
  </div>
  <%= f.text_field :state, :class => 'textfield' %>
</div>

<div class="container">
  <div class="page-header">
    <h3>Zipcode:</h3>
  </div>
  <%= f.text_field :zipcode, :class => 'textfield' %>
</div>
<br />

<%= button_tag(type: 'submit', class: "btn btn-default") do %>
 Update Record <span class="glyphicon glyphicon-floppy-disk"></span>
<% end %>


<% end %>
