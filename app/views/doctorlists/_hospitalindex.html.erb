<% if @doctorlists.any? %>
<div class="container">
  <div class="jumbotron">
    <h1><%= @hospital.name %> Doctor Registry</h1>
  </div>
</div>
<div class="container">

  <% @doctorlists.each do |doctorlist| %>
    <p>
      <%= link_to User.find(doctorlist.user_id).name, user_path(User.find(doctorlist.user_id)) %>
      <% if doctorlist.user_id == current_user.id || current_user.admin %> |
      <small><%= link_to "Delete", doctorlist_path(doctorlist), method: :delete,
      data: { confirm: "Are you sure you want to delete this relation?"} %></small>
      <% end %>
    </p>
    <hr />
  <% end %>
  <%= will_paginate @doctorlists %>
</div>

<% else %>
<div class="container">
  <div class="page-header">
    <h1>No Registrations.</h1>
  </div>
  <p>
    There are currently no doctors registered to this hospital.
    <br />
    Return to your <%= link_to "Dashboard", dashboard_path %>.
  </p>
</div>
<% end %>
