<% if @doctorlists.any? %>
<div class="container">
  <div class="jumbotron">
    <h1><%= @user.name %>'s Hospital Registrations</h1>
  </div>
</div>
<div class="container">

  <% @doctorlists.each do |doctorlist| %>
  <p>
    <%= link_to Hospital.find(doctorlist.hospital_id).name, hospital_path(Hospital.find(doctorlist.hospital_id)) %>
    <% if @user.id == current_user.id || current_user.admin %>
    <small>(<%= link_to "Delete", doctorlist_path(doctorlist), method: :delete,
    data: { confirm: "Are you sure you want to delete this relation?"} %>)</small>
    <% end %>
  </p>
  <hr />
  <% end %>
  <%= will_paginate @doctorlists %>
</div>

<% else %>
<div class="container">
    <h3>No Registrations.</h3>
  <% if @user.id == current_user.id %>
  <p>
    You are not currently registered to any hospitals.
    <br />
    Check the <%= link_to "Hospital Index", hospitals_path %> to register.
    <br />
    Return to your <%= link_to "Dashboard", dashboard_path %>.
  </p>
  <% else %>
  <p>
    This professional is not currently registered to any hospitals in ChartPort.
  </p>
  <% end %>
</div>
<% end %>
