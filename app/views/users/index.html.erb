<% if @users.any? %>

<br />

  <div class="container">
    <div class="page-header">
      <h3>Search Results</h3>
    </div>
  </div>

  <% @users.each do |user| %>

  <div class="container">
    <p>
      <%= link_to user.name, user %>
      <% if user.id == current_user.id %><small>(You)</small><% end %>
      <% if user.admin %><small>admin</small><% end %>
    </p>
  </div>

  <% end %>

<% else %>

  <div class="container">
    <div class="page-header">
      <h3>Search Results</h3>
    </div>
    <p>No users could be found.</p>
  </div>
<% end %>
